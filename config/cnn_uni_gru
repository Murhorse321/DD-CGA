training:
  batch_size: 256
  learning_rate: 1e-3
  weight_decay: 0.0
  epochs: 100
  dropout: 0.5
  early_stopping_patience: 10
  best_on: val_f1_macro
  log_dir: results/cnn_uni_gru/log/logs
