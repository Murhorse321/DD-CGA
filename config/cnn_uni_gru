model:
  name: cnn_gru_uni
  params:
    cnn_channels: [32, 64]
    gru_hidden: 128
    gru_layers: 1

    dropout: 0.5
    use_batchnorm: true
    pooling: last
    sequence_order: row
    bidirectional: false # <--- 改为单向

data:
  input_shape: [8, 8]
